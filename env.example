# Validatus Platform Environment Configuration

# OpenAI API Key (Required for LLM operations)
OPENAI_API_KEY=your_openai_api_key_here

# Tavily API Key (Required for web research)
TAVILY_API_KEY=your_tavily_api_key_here

# Perplexity API Key (Required for real-time research)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Multi-LLM Orchestrator API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here

# Perplexity Configuration
PERPLEXITY_DEFAULT_MODEL=sonar-pro
PERPLEXITY_MAX_TOKENS=2000

# Redis Configuration (Optional - defaults to localhost)
REDIS_URL=redis://localhost:6379

# Database Configuration (Optional - defaults to localhost)
DATABASE_URL=postgresql://postgres:password@localhost:5432/validatus

# Knowledge Graph Analyzer Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
